{
  "manifest_version": 3,
  "name": "OKXWeb3ExplorerWingman",
  "version": "1.0",
  "description": "OKX Web3僚机辅助工具",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://web3.okx.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}